<% provide(:title, 'Sign In') %>
<h1>Sign in</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f|%>
			<legend><h3>Enter your user details here.</h3></legend>
			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>

		<span><p>New user? <%= link_to "Sign up here!", signup_path %></p></span>
	</div>
</div>